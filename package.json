{
  "name": "paper-textarea",
  "version": "0.1.2",
  "description": "Paper Textarea React component",
  "main": "index.js",
  "scripts": {
    "build-js": "NODE_ENV=production babel src/paper-textarea.js -o dist/paper-textarea.js",
    "build-css": "postcss --use postcss-cssnext --no-map -o ./dist/paper-textarea.css ./src/paper-textarea.css",
    "prepublish": "rm -rf dist/ && mkdir dist && npm run build-js && npm run build-css",
    "test": "mocha --compilers js:babel-register"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scienceai/paper-textarea.git"
  },
  "keywords": [
    "Material UI",
    "Material Design Lite",
    "react",
    "Paper",
    "textarea",
    "scientific UI"
  ],
  "author": "Chris Callahan <chris@standardanalytics.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/scienceai/paper-textarea/issues"
  },
  "homepage": "https://github.com/scienceai/paper-textarea",
  "peerDependencies": {
    "react": ">= 14.0"
  },
  "devDependencies": {
    "babel-cli": "6.7.5",
    "babel-eslint": "6.0.2",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-register": "6.7.2",
    "eslint": "2.7.0",
    "eslint-plugin-react": "4.3.0",
    "mocha": "2.4.5",
    "postcss": "5.0.19",
    "postcss-cli": "2.5.1",
    "postcss-cssnext": "2.5.2",
    "react": "15.0.1",
    "react-addons-test-utils": "15.0.1",
    "react-dom": "15.0.1"
  }
}
